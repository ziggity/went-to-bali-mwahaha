<h1>Admin Panel</h1>
 <%= link_to 'Add a new product', new_product_path %>
 <h2>Edit our Products</h2>
 <ul>
   <% @products.each do |product| %>
     <%= form_for product do |f| %>
       <div class="form-group">
         <%= f.label :name %>
         <%= f.text_field :name %>
       </div>
       <div class="form-group">
         <%= f.label :description %><br>
         <%= f.text_area :description, size: "50x5" %>
       </div>
       <div class="form-group">
         <%= f.label :price %>
         $<%= f.number_field :price, :step => "0.01" %>
       </div>
       <div class="actions">
         <%= f.submit "Submit" %>
       </div>
     <% end %>
   <% end %>
 </ul>
